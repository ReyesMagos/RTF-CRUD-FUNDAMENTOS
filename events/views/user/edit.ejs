
<p >&nbsp; </p>
<p >&nbsp; </p>
<div class="container">
    <form role="" action="/user/update/<%= user.id %>" method="POST" class="form-horizontal">

                <% if(flash && flash.err) { %>
                    <ul class="alert alert-success">
                    <% Object.keys(flash.err).forEach(function(error){ %>
                        <li> <%- JSON.stringify(flash.err[error]) %></li>
                        <% }) %>
                </ul>
                <% } %>
            <legend>Editar Usuario</legend>
              
                <label for="name" class="control-label">Name</label>
                <input class="form-control" name="name" placeholder="Name" value="<%= user.name %>"required>
                
                 <label for="lastname">Lastname</label>
                <input  class="form-control" name="lastname" placeholder="Lastname" value="<%= user.lastname %>" required>
               
                 <label for="age">Age</label>
                <input  class="form-control" name="age" value="<%= user.age %>"  type="number" placeholder="Age" min="12" max="70" required>
              
                <label for="email">Email</label>
                <div class="input-group">

                    <div class="input-group-addon">@</div>
                        <input class="form-control" name="email" value="<%= user.email %>" type="email" placeholder="Email" required>
                </div>
             
                <label for="genre">Genre</label>
                <input class="form-control" name="genre" type="number" value="<%= user.genre %>" placeholder="Genre" min="0" max="1"required>
              
                <label for="phone">Phone</label>
                <input class="form-control" name="phone"type="number" value="<%= user.phone %>" placeholder="Phone"required>
              
                <label for="address">Address</label>
                <input class="form-control" name="address"type="text" value="<%= user.address %>" placeholder="Address"required>
               
                <label ></label>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Guardar</button>
                    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                </div>

    </form>
</div>