<div class="container">
	<h1>Contactos Registrados</h1>
	<table class="table table-hover" >
		<th>Nombre</th>
		<th>Apellido</th>
		<th>Email</th>
		<th>Usuario</th>
		<th></th>
		<th></th>
		<% _.each(users, function(user) { %>
		<tr>
			<td><%=user.name%></td>
			<td><%=user.lastname%></td>
			<td><%=user.email%></td>
			<td><%=user.username%></td>
			<td>
				<a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Ver</a>
			</td>

			<td>
				<form action="/user/destroy/<%= user.id%>" method="POST" accept-charset="utf-8">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit"  class="btn btn-sm btn-danger" value="Delete"/>
					<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
				</form>
			</td>
			
		</tr>
		<%})%>
	</table>
</div>